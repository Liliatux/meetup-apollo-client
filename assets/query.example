import { Mutation } from "react-apollo";
import gql from "graphql-tag";

const GET_BREEDS = gql`
  {
    breeds {
      id
      name
    }
  }
`;

class Breeds extends React.Component {
  render() {
    return (
      <Query
        query={GET_BREEDS}
      >
        {({ loading, error, data }) => {
          if (loading) return <p>Loading...</p>;
          if (error) return <p>Error :(</p>;

          return (
            <div>
              <ul>
                {data.breeds.map(breed => (
                  <li key={breed.id}>
                    {breed.name}
                  </li>
                ))}
              </ul>
            </div>
          )
        }}
      </Query>
    )
  }
}
